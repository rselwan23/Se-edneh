<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.roger.seedneh.MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Welcomeeee"
        android:id="@+id/textWlc"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bttnelderly"
        android:layout_toEndOf="@+id/bttnelderly" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elderly"
        android:id="@+id/bttnelderly"
        android:textColor="#000000"
        android:background="#c8d46a"
        android:onClick="onClickSetElderly"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CareTacker"
        android:id="@+id/bttncaretaker"
        android:textColor="#000000"
        android:background="#c8d46a"
        android:layout_alignTop="@+id/bttnelderly"
        android:layout_alignParentRight="true"
        android:onClick="onClickSetCaretacker"
        android:layout_alignParentEnd="true" />





</RelativeLayout>

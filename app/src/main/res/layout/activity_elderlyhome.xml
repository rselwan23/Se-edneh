<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Welcome"
        android:text="Welcome Home"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/pictures"
        android:layout_toStartOf="@+id/pictures" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/CallButton"
        android:src="@drawable/calling"
        android:layout_gravity="right"
        android:onClick="onClickSetCall"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/sosbutton"
        android:src="@drawable/sos"
        android:onClick="onClickSetSos"
        android:layout_alignTop="@+id/CallButton"
        android:layout_toRightOf="@+id/Welcome"
        android:layout_toEndOf="@+id/Welcome" />




    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/todolist"
        android:src="@drawable/todo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickSetTodolist"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/pictures"
        android:src="@drawable/pictures"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>